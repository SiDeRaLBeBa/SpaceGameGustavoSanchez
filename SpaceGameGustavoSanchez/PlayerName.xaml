<Window x:Class="SpaceGame.PlayerName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="200" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background4.png"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="36" Margin="41,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Foreground="#FF1052FD" FontSize="24" FontWeight="Bold"><Run Text="Enter "/><Run Language="es-pe" Text="Y"/><Run Text="our Name"/></TextBlock>
        <TextBox Name="PlayerNameTextBox" HorizontalAlignment="Center" Height="19" Margin="0,106,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="126" Background="#FF110683" Foreground="White" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="OK" Width="75" Margin="10,0,0,0" Click="OkButton_Click" Background="{x:Null}" Foreground="#FF1052FD" FontSize="14" FontWeight="Bold"/>
            <Button Content="Cancel" Width="75" Margin="10,0,0,0" Click="CancelButton_Click" Background="{x:Null}" Foreground="#FF1052FD" FontSize="14" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>