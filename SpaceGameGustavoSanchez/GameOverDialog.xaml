<Window x:Class="SpaceGame.GameOverDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="200" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background4.png"/>
        </Grid.Background>
        <TextBlock Text="Game Over!" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Red" FontWeight="Bold" />
        <StackPanel Margin="10,50,10,10">
            <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" HorizontalAlignment="Center" Foreground="White" />
            <TextBlock x:Name="TimeText" Text="Time Survived: 0s" FontSize="16" HorizontalAlignment="Center" Foreground="White" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Main Menu" Width="100" Margin="5" Click="MainMenuButton_Click" Foreground="#FF00ACFF" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="18" FontWeight="Bold" />
                <Button Content="Play Again" Width="100" Margin="5" Click="PlayAgainButton_Click" Foreground="#FF00ACFF" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="18" FontWeight="Bold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
